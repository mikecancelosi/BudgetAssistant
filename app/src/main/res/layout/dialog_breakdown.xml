<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/dialogBreakdownPieChart"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Total:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DialogBreakdownTotalValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="$1000.00"
            android:textSize="18sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/dialogBreakdownPercentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dialogBreakdownDollarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialogbreakdownIncomeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="195dp"
        android:text="/$1000"
        android:textAlignment="textEnd" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/BreakdownDialogRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" >

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/BreakdownDialogAddCategoryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+" />

</LinearLayout>

</ScrollView>